<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="demo_appointment_1" model="clinica.appointment">
            <field name="pet_id" ref="demo_pet_rex"/>
            <field name="date" eval="(datetime.now() + relativedelta(days=1, hour=10)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="reason">Vacunación anual obligatoria.</field>
            <field name="state">pending</field>
            <field name="color">4</field> 
        </record>

        <record id="demo_appointment_2" model="clinica.appointment">
            <field name="pet_id" ref="demo_pet_luna"/>
            <field name="date" eval="(datetime.now() - relativedelta(days=1, hour=16, minute=30)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="reason">Revisión post-operatoria satisfactoria.</field>
            <field name="state">done</field>
            <field name="color">2</field>
        </record>
    </data>
</odoo>