<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="appointment_view_tree" model="ir.ui.view">
        <field name="name">appointment.view.tree</field>
        <field name="model">clinica.appointment</field>
        <field name="arch" type="xml">
            <tree string="Citas">
                <field name="name"/>
                <field name="pet_id"/>
                <field name="veterinarian_id"/>
                <field name="reason"/>
                <field name="state"/>
                <field name="date"/>
                <field name="urgency"/>
                <field name="treatment_ids"/>

            </tree>
        </field>
    </record>

    <record id="appointment_view_form" model="ir.ui.view">
        <field name="name">appointment.view.form</field>
        <field name="model">clinica.appointment</field>
        <field name="arch" type="xml">
            <form string="Cita">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="pending,done,cancelled"/>

                    <button name="action_done" string="Finalizar Cita" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'pending')]}"/>

                    <button name="action_cancel" string="Cancelar" type="object" attrs="{'invisible': [('state', '!=', 'pending')]}"/>

                    <button name="action_draft" string="Volver a Pendiente" type="object" attrs="{'invisible': [('state', '=', 'pending')]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="urgency"/>
                            <field name="name"/>
                            <field name="color" widget="color_picker"/>
                            <field name="veterinarian_id"/>
                            <field name="pet_id"/>
                        </group>
                    </group>
                    <group string="Detalles">

                        <field name="date"/>
                        <field name="reason"/>
                        <field name="treatment_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_report_appointment" model="ir.actions.report">
        <field name="name">Informe Cita</field>
        <field name="model">clinica.appointment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">clinica.report_appointment_template</field>
        <field name="report_file">clinica.report_appointment_template</field>
        <field name="binding_model_id" ref="model_clinica_appointment"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_appointment_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Resumen de Cita</h2>

                        <strong>Mascota:</strong>
                        <span t-field="o.pet_id.name"/>
                        <div t-if="o.pet_id.image" style="margin-top: 10px; margin-bottom: 10px;">
                            <strong>Foto de la mascota:</strong>
                            <br/>
                            <img t-if="o.pet_id.image" t-att-src="image_data_uri(o.pet_id.image)" style="max-height: 150px; max-width: 150px; margin-top: 10px"/>
                        </div>
                        <p>
                            <strong>Veterinario asignado:</strong>
                            <span t-field="o.veterinarian_id"/>
                        </p>

                        <p>
                            <strong>Fecha:</strong>
                            <span t-field="o.date"/>
                        </p>
                        <p>
                            <strong>Motivo:</strong>
                            <span t-field="o.reason"/>
                        </p>
                        <p>
                            <strong>Estado:</strong>
                            <span t-field="o.state"/>
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="appointment_view_calendar" model="ir.ui.view">
        <field name="name">Calendario de Citas</field>
        <field name="model">clinica.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Consultar Fechas de citas" date_start="date" date_stop="date" mode="month" color="color">
            </calendar>
        </field>
    </record>

    <record id="appointment_action" model="ir.actions.act_window">
        <field name="name">Cita</field>
        <field name="res_model">clinica.appointment</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <menuitem id="appointment_menu" name="Citas" action="appointment_action" parent="clinica_root_menu" />

</odoo>
