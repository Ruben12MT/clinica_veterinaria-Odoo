<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Lista (Tree) -->
    <record id="owner_view_tree" model="ir.ui.view">
        <field name="name">clinica.owner.tree</field>
        <field name="model">clinica.owner</field>
        <field name="arch" type="xml">
            <tree string="Dueños">
                <field name="name"/>
                <field name="dni"/>
                <field name="bank_account"/>
                <field name="debts"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario (Form) -->
    <record id="owner_view_form" model="ir.ui.view">
        <field name="name">clinica.owner.form</field>
        <field name="model">clinica.owner</field>
        <field name="arch" type="xml">
            <form string="Dueños">
                <sheet>
                    <group>
                        <field name="image" widget="image" options="{'size': (120, 120)}"/>
                    </group>
                    <group string="Información Personal">
                        <group>
                            <field name="name"/>
                            <field name="dni"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="address"/>
                        </group>
                    </group>
                    <group string="Información Financiera">
                        <group>
                            <field name="bank_account"/>
                            <field name="debts"/>
                        </group>
                    </group>
                    <group>
                        <field name="pet_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VISTA KANBAN -->
    <record id="owner_view_kanban" model="ir.ui.view">
        <field name="name">clinica.owner.kanban</field>
        <field name="model">clinica.owner</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="bank_account"/>
                <field name="debts"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('clinica.owner', 'image', record.id.raw_value)" alt="Dueño" class="o_image_64_max"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted">
                                    <field name="bank_account"/>
                                </div>
                                <div>
                                    <span>Deuda: </span><field name="debts"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- VISTA SEARCH -->
    <record id="owner_view_search" model="ir.ui.view">
        <field name="name">clinica.owner.search</field>
        <field name="model">clinica.owner</field>
        <field name="arch" type="xml">
            <search string="Buscar Dueño">
                <field name="name" string="Nombre o DNI" filter_domain="['|', ('name', 'ilike', self), ('dni', 'ilike', self)]"/>
                <field name="phone"/>
                <field name="bank_account"/>

                <separator/>
                <filter string="Con Deudas" name="with_debts" domain="[('debts', '>', 0)]"/>
                <filter string="Sin Deudas" name="no_debts" domain="[('debts', '=', 0)]"/>

                <group expand="0" string="Agrupar por">
                    <filter string="Dirección" name="group_address" context="{'group_by': 'address'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para abrir Dueños -->
    <record id="owner_action" model="ir.actions.act_window">
        <field name="name">Dueños</field>
        <field name="res_model">clinica.owner</field>
        <field name="view_mode">tree,form,kanban,search</field>
    </record>

    <!-- Menú -->
    <menuitem id="owner_menu" 
              name="Dueños" 
              action="owner_action" 
              parent="clinica_root_menu" 
              sequence="10"/>
</odoo>