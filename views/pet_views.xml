<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pet_view_tree" model="ir.ui.view">
        <field name="name">pet.view.tree</field>
        <field name="model">clinica.pet</field>
        <field name="arch" type="xml">
            <tree string="Mascotas">
                <field name="image" widget="image" options="{'size': (128, 128)}"/>
                <field name="name"/>
                <!-- <field name="owner_id"/> -->
                <field name="species"/>
                <field name="breed"/>
                <field name="age"/>

            </tree>
        </field>
    </record>

    <record id="pet_view_form" model="ir.ui.view">
        <field name="name">pet.view.form</field>
        <field name="model">clinica.pet</field>
        <field name="arch" type="xml">
            <form string="Mascota">
                <sheet>
                    <group>
                        <field name="image" widget="image" options="{'size': (120, 120)}"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="species"/>
                        <field name="breed"/>
                        <field name="age"/>
                        <!-- <field name="owner_id"/> -->
                    </group>
                    <group>
                        <field name="notes"/>
                        <field name="appointment_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_view_kanban" model="ir.ui.view">
        
        <field name="name">pet.view.kanban</field>
        <field name="model">clinica.pet</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="species"/>
                <field name="age"/>
                <!-- <field name="owner_id"/> -->
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('clinica.pet', 'image', record.id.raw_value)" alt="Mascota" class="o_image_64_max"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong>
                                    <t t-esc="record.name.value"/>
                                </strong>
                                <div>
                                    Especie: <t t-esc="record.species.value"/>
                                </div>
                                <div>Años: <t t-esc="record.age.value"/>
                                    años
                                </div>
                                <!-- <div>Owner: <t t-esc="record.owner_id.value"/>
                                </div> -->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="pet_action" model="ir.actions.act_window">
        <field name="name">Mascota</field>
        <field name="res_model">clinica.pet</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="pet_menu" name="Mascotas" action="pet_action" parent="clinica_root_menu" />

</odoo>
