<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Lista (Tree) -->
    <record id="veterinarian_view_tree" model="ir.ui.view">
        <field name="name">clinica.veterinarian.tree</field>
        <field name="model">clinica.veterinarian</field>
        <field name="arch" type="xml">
            <tree string="Veterinarios">
                <field name="name"/>
                <field name="dni"/>
                <field name="license_number"/>
                <field name="specialty"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario (Form) -->
    <record id="veterinarian_view_form" model="ir.ui.view">
        <field name="name">clinica.veterinarian.form</field>
        <field name="model">clinica.veterinarian</field>
        <field name="arch" type="xml">
            <form string="Veterinarios">
                <sheet>
                    <group>
                        <field name="image" widget="image" options="{'size': (120, 120)}"/>
                    </group>
                    <group string="Información Personal">
                        <group>
                            <field name="name"/>
                            <field name="dni"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="address"/>
                        </group>
                    </group>
                    <group string="Información Profesional">
                        <group>
                            <field name="license_number"/>
                            <field name="specialty"/>
                        </group>
                        <group>
                            <field name="schedule"/>
                        </group>
                    </group>
                    <group>
                        <field name="appointment_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VISTA KANBAN -->
    <record id="veterinarian_view_kanban" model="ir.ui.view">
        <field name="name">clinica.veterinarian.kanban</field>
        <field name="model">clinica.veterinarian</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="specialty"/>
                <field name="license_number"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('clinica.veterinarian', 'image', record.id.raw_value)" alt="Veterinario" class="o_image_64_max"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted">
                                    <field name="specialty"/>
                                </div>
                                <div>
                                    <span>Lic: </span><field name="license_number"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- VISTA GRAPH -->
    <record id="veterinarian_view_graph" model="ir.ui.view">
        <field name="name">clinica.veterinarian.graph</field>
        <field name="model">clinica.veterinarian</field>
        <field name="arch" type="xml">
            <graph string="Veterinarios por Especialidad" type="bar">
                <field name="specialty"/>
            </graph>
        </field>
    </record>


    <!-- Acción para abrir Veterinarios -->
    <record id="veterinarian_action" model="ir.actions.act_window">
        <field name="name">Veterinarios</field>
        <field name="res_model">clinica.veterinarian</field>
        <field name="view_mode">tree,form,kanban,graph</field>
    </record>

    <!-- Menú -->
    <menuitem id="veterinarian_menu" 
              name="Veterinarios" 
              action="veterinarian_action" 
              parent="clinica_root_menu" 
              sequence="10"/>
</odoo>