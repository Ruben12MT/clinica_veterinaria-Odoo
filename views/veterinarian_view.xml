    <!-- VISTA KANBAN -->
    <record id="veterinarian_view_kanban" model="ir.ui.view">
        <field name="name">clinica.veterinarian.kanban</field>
        <field name="model">clinica.veterinarian</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="specialty"/>
                <field name="state"/>
                <field name="license_number"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('clinica.veterinarian', 'image', record.id.raw_value)" alt="Veterinario" class="o_image_64_max"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted">
                                    <field name="state"/>
                                </div>
                                <div>
                                    <span>Especialidad: </span><field name="specialty"/>
                                </div>
                                <div>
                                    <span>Lic: </span><field name="license_number"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- VISTA GRAPH -->
    <record id="veterinarian_view_graph" model="ir.ui.view">
        <field name="name">clinica.veterinarian.graph</field>
        <field name="model">clinica.veterinarian</field>
        <field name="arch" type="xml">
            <graph string="Veterinarios por Especialidad" type="bar">
                <field name="specialty"/>
            </graph>
        </field>
    </record>

    <!-- Acción para abrir Veterinarios -->
    <record id="veterinarian_action" model="ir.actions.act_window">
        <field name="name">Veterinarios</field>
        <field name="res_model">clinica.veterinarian</field>
        <field name="view_mode">tree,form,kanban,graph</field>
    </record>

    <!-- Vinculamos la vista TREE heredada a la acción -->
    <record id="action_veterinarian_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="veterinarian_view_tree_inherited"/>
        <field name="act_window_id" ref="veterinarian_action"/>
    </record>

    <!-- Vinculamos la vista FORM heredada a la acción -->
    <record id="action_veterinarian_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="veterinarian_view_form_inherited"/>
        <field name="act_window_id" ref="veterinarian_action"/>
    </record>

    <!-- Menú -->
    <menuitem id="veterinarian_menu" 
              name="Veterinarios" 
              action="veterinarian_action" 
              parent="clinica_root_menu" 
              sequence="10"/>
</odoo>