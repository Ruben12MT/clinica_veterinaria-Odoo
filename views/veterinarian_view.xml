<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Lista (Tree) -->
    <record id="veterinarian_view_tree_inherited" model="ir.ui.view">
        <field name="name">clinica.veterinarian.tree.inherit</field>
        <field name="model">clinica.veterinarian</field>
        <field name="inherit_id" ref="clinica.view_person_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='dni']" position="after">
                <field name="license_number"/>
                <field name="state"/>
                <field name="specialty"/>
            </xpath>
        </field>
    </record>

    <!-- Vista Formulario (Form) -->
    <record id="veterinarian_view_form_inherited" model="ir.ui.view">
        <field name="name">clinica.veterinarian.form.inherit</field>
        <field name="model">clinica.veterinarian</field>
        <field name="inherit_id" ref="clinica.view_person_form"/>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet[@name='person_sheet']" position="before">
                <header>
                    <button name="action_set_busy" string="Empezar Consulta" 
                        type="object" states="available" class="oe_highlight"/>
                    <button name="action_set_available" string="Finalizar Consulta" 
                        type="object" states="busy"/>
                    <button name="action_set_off" string="Dar de Baja" 
                        type="object" states="available" class="oe_highlight"/>
                    <button name="action_set_available" string="Dar de Alta" 
                        type="object" states="off"/>

                    <field name="state" widget="statusbar" statusbar_visible="available,busy,off"/>
                </header>
            </xpath>
            <xpath expr="//group[@name='personal_info']" position="after">
                <group string="Información Profesional">
                    <group>
                        <field name="license_number"/>
                        <field name="specialty"/>
                    </group>
                    <group>
                        <field name="schedule"/>
                    </group>
                </group>
                <group>
                    <field name="appointment_ids"/>
                </group>
            </xpath>
        </field>
    </record>

